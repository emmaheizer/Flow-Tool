{
  "manifest_version": 2,
  "name": "My Cool Extension",
  "version": "0.1",
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["jquery-3.2.1.min.js", "content.js"]
    }
  ],
  "browser_action": {
    "default_icon": "default-icon.png",
    "active_icon": "active-icon.png",
    "default_popup": "popup.html"
},
  "permissions": [
   "activeTab"
   ],

   "web_accessible_resources": [
    "hidden-actions.png"
  ]
}


